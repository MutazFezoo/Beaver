<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="android:windowSplashscreenContent">@drawable/bg_launch</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowFullscreen">true</item>
        <!-- using windowSplashscreenContent insteadof windowBackground, we need to add fitsSystemWindows
        if we want to make a clean transition between splash and next screen -->
        <item name="android:fitsSystemWindows">true</item>
    </style>

</resources>